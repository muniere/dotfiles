function addpath() {
  argv=("$@")

  if [ -n "$ZSH_VERSION" ]; then
    setopt localoptions ksharrays
  fi

  for ((i=${#argv[@]} - 1; i >= 0; i--)); do
    x=${argv[i]}

    if [[ ":$PATH:" == *":$x:"* ]]; then
      export PATH="$x:${PATH//:$x:/:}"
    else
      export PATH="$x:$PATH"
    fi
  done
}

export LC_ALL=C
export LANG=en_US.UTF-8
export EDITOR=vim

addpath $HOME/.local/bin /usr/local/bin /usr/local/sbin /usr/bin /bin /usr/sbin /sbin

