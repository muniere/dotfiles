function addpath() {
  local x=$1
  local xs=":$PATH:"
  xs="${xs//:$x:/:}"
  xs="${xs/#:/}"
  xs="${xs/%:/}"
  export PATH="$x:$xs"
}

export LC_ALL=C
export LANG=en_US.UTF-8
export EDITOR=vim

addpath /sbin
addpath /usr/sbin 
addpath /bin
addpath /usr/bin
addpath /usr/local/sbin
addpath /usr/local/bin
addpath $HOME/.local/bin

