function addpath() {
  local x=$1

  if [[ ":$PATH:" == *":$x:"* ]]; then
    export PATH="$x:${PATH//:$x:/:}"
  else
    export PATH="$x:$PATH"
  fi
}

export LC_ALL=C
export LANG=en_US.UTF-8
export EDITOR=vim

addpath /sbin
addpath /usr/sbin 
addpath /bin
addpath /usr/bin
addpath /usr/local/sbin
addpath /usr/local/bin
addpath $HOME/.local/bin

