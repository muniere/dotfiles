#compdef xake

function _xake() {
  _arguments -C \
    '(-h --help)'{-h,--help}'[show this help message and exit]' \
    '1: :->actions' && ret=0

  case "$state" in
    actions)
      local -a actions
      actions=(list completion link unlink)
      _describe 'actions' actions && ret=0
      ;;

  esac

  return ret
}

